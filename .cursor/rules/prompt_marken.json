{
    "title": "Application web bancaire - Banque en ligne (Laravel + Bootstrap + Filament)",
    "summary": "Prompt détaillé pour générer un MVC fonctionnel d'une banque en ligne : landing page animée, pages d'authentification, dashboard client & admin, gestion multi-devises, recharges (IBAN / Paypal / cryptos), cartes virtuelles, profils, et administration complète via Filament. Toutes les pages et fonctionnalités sont dynamiques (liaison base de données) et configurables côté admin. Utiliser Laravel, Filament, Bootstrap 5+, FontAwesome et librairies JS d'animation.",
    "nom_application": "Marken bank",
    "tone_and_style": {
    "lang": "fr",
    "voice": "génération Z, motivant, conversationnel mais pro",
    "notes_for_devs": "Réponses concises, UI moderne, animations subtiles, interactions fluides. Prioriser accessibilité et sécurité."
    },
    "objectives": [
    "Fournir un MVC web complet et fonctionnel d'une banque en ligne (MVP) connecté à une base de données.",
    "Utiliser Laravel pour backend, Filament pour admin, Bootstrap + JS pour UI & animations.",
    "Rendre toutes les pages et fonctionnalités dynamiques et configurables via l'admin Filament."
    ],
    "tech_stack": {
    "backend": "Laravel >=10",
    "database": "MySQL / MariaDB (avec migrations et seeders)",
    "admin": "Filament Admin (latest stable)",
    "frontend": "Blade + Bootstrap 5 (JS), Alpine.js (optionnel pour micro-interactions)",
    "icons": "FontAwesome",
    "crypto_libs": "bibliothèque d'abstraction pour adresses et confirmations (ex: coinpayments / libraries as placeholders)",
    "payments": "PayPal SDK (sandbox + live), adaptation pour Webhooks",
    "auth": "Laravel Breeze or Jetstream (adapté) + 2FA optionnel",
    "queues": "Laravel Queues (Redis) pour traitement asynchrone des recharges et notifications",
    "storage": "Local / S3 compatible pour avatars et documents",
    "notifications": "Mail (SMTP), Notifications Filament, SMS adapter placeholder"
    },
    "ux_ui_requirements": {
    "landing": "Design moderne, hero animé (particle / simple parallax), CTA clair (Ouvrir un compte), sections: features, tarifs, sécurité, FAQ, contact, footer.",
    "auth": "Pages login & register stylées, register = ouverture de compte bancaire (formulaire KYC minimal), validation côté client et serveur.",
    "dashboard": "Client dashboard responsive, cartes d'information (solde, transactions récentes, IBAN, actions rapides), switch multi-devises, actions en un clic.",
    "admin": "Tableaux de bord Filament, ressources CRUD pour utilisateurs, comptes, recharges, cartes virtuelles, logs, config API.",
    "animations": "Bootstrap transitions + small JS animations (no heavy frameworks). Utiliser AOS or simple CSS animations + Bootstrap modal animations.",
    "design_tokens": "Palette moderne (2-3 couleurs), typographie lisible, spacing cohérent, composants réutilisables."
    },
    "pages": [
    {
    "name": "Landing",
    "path": "/",
    "description": "Hero animé, features, CTA Ouvrir un compte, témoignages, FAQ, footer. Intégrer micro-animations, CTA en sticky header."
    },
    {
    "name": "Auth - Login",
    "path": "/login",
    "description": "Login simple + option 'connexion via email / phone', 'mot de passe oublié', 2FA optional."
    },
    {
    "name": "Auth - Register / Open Bank Account",
    "path": "/register",
    "description": "Formulaire KYC minimal: nom, prénom, date naissance, adresse, pièce identité (upload), email, phone; choix devise principale; génération automatique d'un numéro de compte unique."
    },
    {
    "name": "Client Dashboard - Home",
    "path": "/dashboard",
    "description": "Vue d'ensemble: soldes multi-devises, dernieres transactions, boutons rapides (Transférer, Recharger, Demander Carte virtuelle), notifications."
    },
    {
    "name": "Account Details",
    "path": "/dashboard/account/{account_id}",
    "description": "IBAN, numéro de compte, historique de transactions filtrable, export CSV, réglages du compte (activer/désactiver)."
    },
    {
    "name": "Profile",
    "path": "/dashboard/profile",
    "description": "Afficher & modifier profile, upload avatar (cropper), changement mot de passe, préférences (notifications)."
    },
    {
    "name": "Add / Manage Accounts (multi-devises)",
    "path": "/dashboard/accounts",
    "description": "Ajouter un compte interne dans une autre devise (génération compte virtuel), gestion des comptes."
    },
    {
    "name": "Virtual Card",
    "path": "/dashboard/cards",
    "description": "Souscrire à une carte virtuelle: formulaire, génération de carte virtuelle (numéro masqué), statut (pending, active), possibilité de geler/supprimer."
    },
    {
    "name": "Top-up / Recharges",
    "path": "/dashboard/topup",
    "description": "Choix méthode: IBAN (virement externe), Crypto (liste dynamique), PayPal. Formulaire de recharge, upload preuve si nécessaire. Recharge marquée pending until admin confirmation."
    },
    {
    "name": "Transactions",
    "path": "/dashboard/transactions",
    "description": "Liste complète filtrable (date, montant, devise, type). Détails d'une transaction."
    },
    {
    "name": "Admin Dashboard (Filament)",
    "path": "/admin",
    "description": "Ressources Filament: Users, BankAccounts, Transactions, Topups, Cards, Settings, API Keys, Logs, KYC documents, Notifications."
    },
    {
    "name": "Admin - Recharge Approvals",
    "path": "/admin/recharges",
    "description": "Liste des recharges en attente, possibilité d'approuver/rejeter, ajouter notes, déclencher crédits sur compte (via transaction interne)."
    },
    {
    "name": "Admin - Settings",
    "path": "/admin/settings",
    "description": "Configurer API PayPal, adresses crypto, IBAN de dépôt, fees, limites, activation méthodes de paiement, email templates."
    },
    {
    "name": "Support / Help Center",
    "path": "/help",
    "description": "FAQ, contact form, ticketing basique."
    },
    {
    "name": "Legal Pages",
    "path": "/legal/*",
    "description": "CGU, Politique de confidentialité, mentions légales, conditions tarifaires."
    }
    ],
    "features": [
    "Compte utilisateur avec numéro de compte unique et IBAN généré (format demo)",
    "Multi-devises par utilisateur (comptes séparés par devise)",
    "Transactions internes (transfert entre comptes) et externes (virement IBAN)",
    "Recharge: IBAN, PayPal, Crypto (liste configurable) — toutes recharges nécessitent confirmation admin",
    "Cartes virtuelles: demande, génération, gestion (activer/désactiver), intégration simplifiée",
    "Profil utilisateur complet (modifier, avatar upload with cropper)",
    "KYC document upload & review (admin)",
    "Filament admin: CRUD complet + paramètres dynamiques",
    "Notifications email (utilisateur & admin) + Filament notifications",
    "Audit logs: toutes actions sensibles loggées",
    "Export CSV / Excel pour transactions",
    "Pagination & filtrage côté serveur (API) pour performances",
    "Role-based access control (admin, support, auditor, user)",
    "Rate limits & anti-fraud simple (suspicious activity flagging)"
    ],
    "database_schema": {
    "tables": [
    {
    "name": "users",
    "columns": {
    "id": "bigint PK",
    "name": "string",
    "email": "string unique",
    "phone": "string nullable",
    "password": "string",
    "avatar_path": "string nullable",
    "is_verified": "boolean default false",
    "role": "enum(user,admin,support,auditor) default user",
    "created_at": "timestamp",
    "updated_at": "timestamp"
    }
    },
    {
    "name": "bank_accounts",
    "columns": {
    "id": "bigint PK",
    "user_id": "bigint FK users",
    "account_number": "string unique",
    "iban": "string nullable unique",
    "currency": "string (ISO code)",
    "balance": "decimal(20,8) default 0",
    "status": "enum(active,blocked,closed)",
    "metadata": "json nullable",
    "created_at": "timestamp",
    "updated_at": "timestamp"
    }
    },
    {
    "name": "transactions",
    "columns": {
    "id": "bigint PK",
    "bank_account_id": "bigint FK bank_accounts",
    "type": "enum(credit,debit,transfer,fee,topup)",
    "amount": "decimal(20,8)",
    "currency": "string",
    "status": "enum(pending,completed,failed,refunded)",
    "reference": "string unique",
    "meta": "json nullable",
    "created_at": "timestamp",
    "updated_at": "timestamp"
    }
    },
    {
    "name": "topups",
    "columns": {
    "id": "bigint PK",
    "user_id": "bigint FK users",
    "bank_account_id": "bigint FK bank_accounts nullable",
    "method": "enum(iban,paypal,crypto)",
    "amount": "decimal(20,8)",
    "currency": "string",
    "crypto_currency": "string nullable",
    "wallet_address": "string nullable",
    "status": "enum(pending,approved,rejected)",
    "admin_note": "text nullable",
    "proof_path": "string nullable",
    "created_at": "timestamp",
    "updated_at": "timestamp"
    }
    },
    {
    "name": "virtual_cards",
    "columns": {
    "id": "bigint PK",
    "user_id": "bigint FK users",
    "bank_account_id": "bigint FK bank_accounts",
    "card_number_masked": "string",
    "card_expiry": "string",
    "card_cvv_masked": "string",
    "status": "enum(pending,active,frozen,cancelled)",
    "metadata": "json nullable",
    "created_at": "timestamp",
    "updated_at": "timestamp"
    }
    },
    {
    "name": "kyc_documents",
    "columns": {
    "id": "bigint PK",
    "user_id": "bigint FK users",
    "type": "string",
    "file_path": "string",
    "status": "enum(pending,verified,rejected)",
    "reviewed_by": "bigint FK users nullable",
    "review_notes": "text nullable",
    "created_at": "timestamp",
    "updated_at": "timestamp"
    }
    },
    {
    "name": "settings",
    "columns": {
    "id": "bigint PK",
    "key": "string unique",
    "value": "json",
    "group": "string nullable",
    "created_at": "timestamp",
    "updated_at": "timestamp"
    }
    },
    {
    "name": "audit_logs",
    "columns": {
    "id": "bigint PK",
    "user_id": "bigint FK users nullable",
    "action": "string",
    "auditable_type": "string nullable",
    "auditable_id": "bigint nullable",
    "meta": "json nullable",
    "created_at": "timestamp"
    }
    }
    ]
    },
    "api_endpoints": [
    {
    "method": "POST",
    "route": "/api/auth/register",
    "description": "Créer utilisateur + créer compte bancaire principal (devise choisie) + trigger email verification"
    },
    {
    "method": "POST",
    "route": "/api/auth/login",
    "description": "Authentification, retourne token (sanctum) + profile"
    },
    {
    "method": "GET",
    "route": "/api/user",
    "description": "Récupérer profil connecté"
    },
    {
    "method": "PUT",
    "route": "/api/user/profile",
    "description": "Modifier profil et avatar upload"
    },
    {
    "method": "GET",
    "route": "/api/accounts",
    "description": "Lister comptes utilisateur (multi-devise)"
    },
    {
    "method": "POST",
    "route": "/api/accounts",
    "description": "Ajouter un compte dans une devise"
    },
    {
    "method": "GET",
    "route": "/api/accounts/{id}/transactions",
    "description": "Transactions filtrables (date range, type, status)"
    },
    {
    "method": "POST",
    "route": "/api/topups",
    "description": "Créer recharge (IBAN, PayPal, Crypto) — status pending"
    },
    {
    "method": "POST",
    "route": "/api/topups/{id}/confirm",
    "description": "Endpoint admin pour approuver/rejeter recharge -> crée transaction credit"
    },
    {
    "method": "POST",
    "route": "/api/cards",
    "description": "Demande carte virtuelle"
    },
    {
    "method": "POST",
    "route": "/api/transactions/transfer",
    "description": "Transfert interne entre comptes"
    },
    {
    "method": "GET",
    "route": "/api/admin/reports/transactions",
    "description": "Rapports filtrables (admin)"
    }
    ],
    "filament_resources": [
    {
    "resource": "UserResource",
    "fields": ["id","name","email","phone","role","is_verified","avatar","created_at"],
    "relations": ["bankAccounts","kycDocuments"],
    "actions": ["impersonate","export"]
    },
    {
    "resource": "BankAccountResource",
    "fields": ["id","user","account_number","iban","currency","balance","status","metadata"],
    "actions": ["credit_manual","debit_manual","freeze","unfreeze"]
    },
    {
    "resource": "TopupResource",
    "fields": ["id","user","method","amount","currency","status","proof","admin_note"],
    "actions": ["approve","reject","download_proof"]
    },
    {
    "resource": "VirtualCardResource",
    "fields": ["id","user","bank_account","card_number_masked","status"],
    "actions": ["activate","freeze","cancel"]
    },
    {
    "resource": "SettingsResource",
    "fields": ["key","value","group"],
    "ui": "Form builder for JSON fields"
    },
    {
    "resource": "KycDocumentResource",
    "fields": ["id","user","type","file","status","reviewed_by","review_notes"],
    "actions": ["verify","reject"]
    },
    {
    "resource": "AuditLogResource",
    "readonly": true,
    "filters": ["date","user","action"]
    }
    ],
